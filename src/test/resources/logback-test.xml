<configuration>


  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>build/lbcore224.log</file>
    <encoder>
      <pattern>%logger{35} - %msg%n</pattern>
    </encoder>
  </appender>



  <root>
    <level value="INFO" />
    <appender-ref ref="FILE" />
  </root>
</configuration>

